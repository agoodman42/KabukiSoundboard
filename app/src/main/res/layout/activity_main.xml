<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gts.aarongoodman.kabukisoundboard.MainActivity"
    android:id="@+id/kabukiButton">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yooo"
        android:id="@+id/yoooButton"
        android:layout_below="@+id/taikoButton"
        android:layout_alignLeft="@+id/taikoButton"
        android:layout_alignStart="@+id/taikoButton"
        android:layout_marginTop="36dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taiko"
        android:id="@+id/taikoButton"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/tsuzumiButton"
        android:layout_alignLeft="@+id/kabukiImageButton"
        android:layout_alignStart="@+id/kabukiImageButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flute"
        android:id="@+id/fluteButton"
        android:layout_below="@+id/yoooButton"
        android:layout_alignLeft="@+id/yoooButton"
        android:layout_alignStart="@+id/yoooButton"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tsuzumi"
        android:id="@+id/tsuzumiButton"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignLeft="@+id/taikoButton"
        android:layout_alignStart="@+id/taikoButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kabuki Soundboard"
        android:id="@+id/titleTextView"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kabukiImageButton"
        android:src="@drawable/demon"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
